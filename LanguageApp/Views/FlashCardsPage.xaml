<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="LanguageApp.Views.FlashCardsPage"
             Title="Flashcards"
             BackgroundColor="#eaf5e6">

    <StackLayout Padding="25" Spacing="18" VerticalOptions="Center">


        <Frame x:Name="FlashcardFrame"
               Padding="30"
               CornerRadius="20"
               BackgroundColor="White"
               VerticalOptions="Center"
               HeightRequest="400"
               WidthRequest="320"
               HasShadow="True">
            <Label x:Name="FlashcardLabel"
                   Text="(Flashcard)"
                   FontSize="34"
                   FontFamily="Inter-SemiBold"
                   HorizontalOptions="Center"
                   VerticalOptions="CenterAndExpand"
                   HorizontalTextAlignment="Center"
                   VerticalTextAlignment="Center"
                   TextColor="#005F73" 
                   FontAttributes="Bold"/>
        </Frame>


        <Button Text="Flip to Translate"
                Clicked="OnTranslateClicked"
                BackgroundColor="#0A9396"
                TextColor="White"
                WidthRequest="320"
                HeightRequest="60"
                FontSize="20"
                FontAttributes="Bold"
                FontFamily="Inter-SemiBold"
                CornerRadius="12"/>


        <Button Text="Show Next Flashcard"
                Clicked="OnNextFlashcardClicked"
                BackgroundColor="#94D2BD"
                TextColor="Black"
                WidthRequest="320"
                HeightRequest="60"
                FontSize="20"
                FontAttributes="Bold"
                FontFamily="Inter-SemiBold"
                CornerRadius="12"/>

    </StackLayout>

</ContentPage>
