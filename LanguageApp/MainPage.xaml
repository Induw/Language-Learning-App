<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="LanguageApp.MainPage">
    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="30">

            <Label Text="Welcome to LingoLift!"
                   FontSize="Large"
                   FontAttributes="Bold"
                   HorizontalOptions="Center" 
                   HorizontalTextAlignment="Center"
                   Margin="0,20,0,10" />

            <Image Source="mainpic.png"
                   HeightRequest="150"
                   Aspect="AspectFit"
                   HorizontalOptions="Center" />

            <Button Text="Vocabulary Flashcards"
                    FontSize="Medium"
                    BackgroundColor="#3B82F6"
                    TextColor="White"
                    CornerRadius="10"
                    Padding="15"
                    Command="{Binding NavigateToFlashcardsCommand}" />

            <Button Text="Daily Challenges"
                    FontSize="Medium"
                    BackgroundColor="#10B981"
                    TextColor="White"
                    CornerRadius="10"
                    Padding="15"
                    Command="{Binding NavigateToChallengesCommand}" />

            <Button Text="Progress Tracker"
                    FontSize="Medium"
                    BackgroundColor="#EF4444"
                    TextColor="White"
                    CornerRadius="10"
                    Padding="15"
                    Command="{Binding NavigateToProgressCommand}" />

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
