<Shell xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
       xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
       xmlns:local="clr-namespace:LanguageApp"
       xmlns:views="clr-namespace:LanguageApp.Views"
       Title="LanguageApp"
       x:Class="LanguageApp.AppShell">

    <ShellContent ContentTemplate="{DataTemplate local:MainPage}" />

    <ShellContent Title="Flashcards"
                  ContentTemplate="{DataTemplate views:FlashCardsPage}" />

    <ShellContent Title="Challenges"
                  ContentTemplate="{DataTemplate views:TypingPage}" />

    <ShellContent Title="Progress"
                  ContentTemplate="{DataTemplate views:ProgressPage}" />
</Shell>

